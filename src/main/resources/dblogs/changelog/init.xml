<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="createUserTable" author="MDeLuise">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="application_users"/>
            </not>
        </preConditions>
        <createTable tableName="application_users">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createAdminUser" author="MDeLuise">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM application_users
                WHERE username = 'admin';
            </sqlCheck>
        </preConditions>
        <insert tableName="application_users">
            <column name="id" value="0"/>
            <column name="username" value="admin"/>
            <column name="password" value="$2a$12$oHF8QcxYvDkIDqIy9YjRauhxGxJEW4qpWiAC74mBBLQmqnG3kBCu6"/>
        </insert>
    </changeSet>

    <changeSet id="createRoleTable" author="MDeLuise">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="application_roles"/>
            </not>
        </preConditions>
        <createTable tableName="application_roles">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createAdminRole" author="MDeLuise">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM application_roles
                WHERE name = 'ROLE_ADMIN';
            </sqlCheck>
        </preConditions>
        <insert tableName="application_roles">
            <column name="id" value="0"/>
            <column name="name" value="ROLE_ADMIN"/>
        </insert>
    </changeSet>

    <changeSet id="createRoleUserRelationTable" author="MDeLuise">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_roles"/>
            </not>
        </preConditions>
        <createTable tableName="user_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="addAdminRoleRelationForeignKeys" author="MDeLuise">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="application_users"/>
        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="user_roles"
                                 constraintName="fk_role_id"
                                 referencedColumnNames="id"
                                 referencedTableName="application_roles"/>
    </changeSet>

    <changeSet id="createAdminRoleRelation" author="MDeLuise">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM application_roles
                WHERE name = 'user_roles';
            </sqlCheck>
        </preConditions>
        <insert tableName="user_roles">
            <column name="user_id" value="0"/>
            <column name="role_id" value="0"/>
        </insert>
    </changeSet>

</databaseChangeLog>