    <changeSet id="createSubCategoryTable" author="MDeLuise">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="sub_categories"/>
            </not>
        </preConditions>
        <createTable tableName="sub_categories">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
            </column>
            <column name="category_id" type="bigint">
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="sub_categories"
                                 constraintName="fk_sub_category_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="categories"/>
    </changeSet>


    <changeSet id="createOutcomeTable" author="MDeLuise">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="outcomes"/>
            </not>
        </preConditions>
        <createTable tableName="outcomes">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="amount" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
            </column>
            <column name="note" type="varchar(255)">
            </column>
            <column name="date" type="date">
            </column>
            <column name="wallet_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="counterpart_id" type="bigint">
            </column>
            <column name="category_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="sub_category_id" type="bigint">
            </column>
            <column name="discount" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <addForeignKeyConstraint baseColumnNames="wallet_id"
                                 baseTableName="outcomes"
                                 constraintName="fk_outcome_wallet_id"
                                 referencedColumnNames="id"
                                 referencedTableName="wallets"/>
        <!--        <addForeignKeyConstraint baseColumnNames="counterpart_id"
                                         baseTableName="outcomes"
                                         constraintName="fk_wallet_id"
                                         referencedColumnNames="id"
                                         referencedTableName="wallets"/> -->
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="outcomes"
                                 constraintName="fk_outcome_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="categories"/>
        <addForeignKeyConstraint baseColumnNames="sub_category_id"
                                 baseTableName="outcomes"
                                 constraintName="fk_sub_outcome_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sub_categories"/>

    </changeSet>


